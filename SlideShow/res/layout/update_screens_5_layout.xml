<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">
    <ImageView
            android:id="@+id/update_screens_5_imageview"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:paddingTop="5dp"
            android:layout_weight="0.7"
            android:src="@drawable/updatescreen_5" />
    
    <TextView 
        android:id="@+id/update_screens_5_headerText"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        android:text="@string/update_screens_5_header"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.1" />
    
    
    <TextView 
        android:id="@+id/update_screens_5_contentText"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="@string/update_screens_5_content"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="top|center_horizontal"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_weight="0.2" />
    
</LinearLayout>

</FrameLayout>
