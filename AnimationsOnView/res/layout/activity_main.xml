<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfd8dc"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/zoomInOut_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#607d8b"
            android:text="@string/zoom_btn"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/fadeInOut_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#607d8b"
            android:text="@string/fade_btn"
            android:textColor="#FFFFFF" >
        </Button>

        <Button
            android:id="@+id/rotate_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#607d8b"
            android:text="@string/rotate_btn"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_animation"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/topToBottm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#607d8b"
            android:text="@string/topToBottom_btn"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/shake_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#607d8b"
            android:text="@string/shake_btn"
            android:textColor="#FFFFFF" >
        </Button>

        <Button
            android:id="@+id/pushUp_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#607d8b"
            android:text="@string/pushUp_btn"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <ImageView
        android:id="@+id/animate_img"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/image"
        android:src="@drawable/animation" />

</RelativeLayout>