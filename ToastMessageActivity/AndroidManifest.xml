<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pcs.toastmessageactivity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ButtonsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UsernameToastActivity"
            android:label="@string/user_name" />
        <activity
            android:name=".PasswordToastActivity"
            android:label="@string/pass_word" />
        <activity
            android:name=".EmailToastActivity"
            android:label="@string/e_mail" />
    </application>

</manifest>