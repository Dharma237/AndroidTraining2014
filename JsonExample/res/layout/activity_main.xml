<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
     <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fb_user"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="#7A5229"
        android:gravity="center"/>
    <Button 
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/json_button"
        android:text="@string/json_button"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:background="#CCB299"/>
    <LinearLayout 
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical"
    	android:layout_marginLeft="30dp"
    	android:background="#F7F4F2">
  
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_txt"
        android:textColor="#000000"
        />
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstName_txt"
        android:textColor="#000000"/>
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gender_txt"
        android:textColor="#000000"/>
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastName_txt"
        android:textColor="#000000"/>
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_txt"
        android:textColor="#000000"/>
 </LinearLayout>
   
    </LinearLayout>