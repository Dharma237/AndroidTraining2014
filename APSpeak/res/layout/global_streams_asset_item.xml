<?xml version="1.0" encoding="utf-8"?>
<com.paradigmcreatives.apspeak.app.util.customcontrols.SquaredItemsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/global_streams_asset_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY" />

    <com.paradigmcreatives.apspeak.app.util.dialogs.ProgressWheel
        android:id="@+id/progressBarwheel"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        ProgressWheel:barColor="#339BB9"
        ProgressWheel:barLength="40dp"
        ProgressWheel:barWidth="3dp"
        ProgressWheel:rimColor="#44000000"
        ProgressWheel:rimWidth="1dp"
        ProgressWheel:textColor="#222222"
        ProgressWheel:textSize="14sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/asset_love_animation_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/asset_owner_pic"
        android:layout_gravity="center"
        android:src="@drawable/loveani"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/love_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/asset_owner_pic"
        android:layout_gravity="left|bottom"
        android:padding="10dp"
        android:src="@drawable/loves_button"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/long_click_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:alpha="0.8"
        android:background="@color/black"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:src="@drawable/userpic" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_picture"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

</com.paradigmcreatives.apspeak.app.util.customcontrols.SquaredItemsFrameLayout>