<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/my_feed_owner_pic"
        android:layout_width="@dimen/asset_owner_pic_dimension"
        android:layout_height="@dimen/asset_owner_pic_dimension"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/userpic" />

    <ImageView
        android:id="@+id/my_feed_asset"
        android:layout_width="@dimen/asset_owner_pic_dimension"
        android:layout_height="@dimen/asset_owner_pic_dimension"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp" />

    <LinearLayout
        android:id="@+id/my_feed_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@id/my_feed_asset"
        android:layout_toRightOf="@id/my_feed_owner_pic"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/my_feed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/notification_text_color" />
    </LinearLayout>

</RelativeLayout>