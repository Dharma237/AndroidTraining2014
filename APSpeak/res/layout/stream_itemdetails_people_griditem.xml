<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/loved_user_pic"
        android:layout_width="@dimen/asset_details_liked_userpic_dimension"
        android:layout_height="@dimen/asset_details_liked_userpic_dimension"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:src="@drawable/userpic" />

    <TextView
        android:id="@+id/loved_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="@string/anonymous"
        android:textColor="@color/blue"
        android:textSize="@dimen/asset_details_liked_username_size" />

</LinearLayout>